<h1>{{title}}</h1>

{{#if hasProducts}}
  <ul>
    {{#each products}}
      <li>
        <strong>{{this.title}}</strong> —
        ${{this.price}} —
        Stock: {{this.stock}} —
        Categoría: {{this.category}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No hay productos cargados.</p>
{{/if}}
